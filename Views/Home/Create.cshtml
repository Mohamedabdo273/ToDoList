<form action="/Home/Create" method="post">
    <fieldset>
        <legend>Create New To-Do Item</legend>
        <div class="row">
            <div>
                <label for="nameInput" class="form-label mt-4">Your Name</label>
                <input type="text" class="form-control" id="nameInput" name="Name" aria-describedby="nameHelp">
                <small id="nameHelp" class="form-text text-muted">Your name will be stored in a cookie for 1 day.</small>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </fieldset>
</form>
