@model ItemList
<div class="row">
    <div class="col-12 mb-3">
        <h2><a href=""><i class="bi bi-arrow-left"></i></a> CreateNew</h2>
    </div>
</div>

<div class="row">
    <form action="/List/Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleProductName" class="form-label">Title</label>
            <input type="text" class="form-control" id="exampleProductName" name="Title" required>
        </div>
        <div class="mb-3">
            <label for="exampleProductDescription" class="form-label">Description</label>
            <input type="text" class="form-control" id="exampleProductDescription" name="Description" required>
        </div>
        <div class="mb-3">
            <label for="exampleProductDescription" class="form-label">Deadline</label>
            <input type="date" class="form-control" id="exampleProductDescription" name="Deadline" required>
        </div>
        <div class="mb-3">
            <label for="exampleProductPhotoUrl" class="form-label">Img</label>
            <input type="file" class="form-control" id="exampleProductPhotoUrl" name="PhotoUrl" accept="image/*" onchange="previewImage(event)" required>
        </div>
        <div class="mb-3">
            <!-- Image preview container -->
            <img id="imagePreview" src="#" alt="Image Preview" style="display:none; width: 200px; height: auto;" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        const imagePreview = document.getElementById('imagePreview');

        reader.onload = function(){
            imagePreview.src = reader.result;
            imagePreview.style.display = 'block'; // Show the image preview
        }

        if(event.target.files[0]) {
            reader.readAsDataURL(event.target.files[0]);
        } else {
            imagePreview.style.display = 'none'; // Hide the preview if no file is selected
        }
    }
</script>


